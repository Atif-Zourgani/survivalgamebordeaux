<header>
    <nav class="headerContainer posRelative">
        <ul>
            <li class="{{ app.request.attributes.get('_route') == 'app_home' ? 'linkActive' : '' }}">
                <a href="{{ path('app_home') }}">ACCUEIL</a>
            </li>
            {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
                {% if app.user and app.user.session is empty %}
                    <li class="{{ app.request.attributes.get('_route') == 'app_user_session' ? 'linkActive' : '' }}">
                        <a href="{{ path('app_user_session') }}">S'INSCRIRE</a>
                    </li>
                {% else %}
                    <li class="{{ app.request.attributes.get('_route') == 'app_user_ongoing_session' ? 'linkActive' : '' }}">
                        <a href="{{ path('app_user_ongoing_session', {'sessionName': app.user.session.name}) }}">MA PARTIE</a>
                    </li>
                {% endif %}
            {% endif %}
            <li class="logoHeader">
                <img src="{{ asset('images/survival_games_logo.png') }}" alt="logo survival game bordeaux">
            </li>
            {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
                <li class="{{ app.request.attributes.get('_route') == 'app_profile' ? 'linkActive' : '' }}">
                    <a href="{{ path('app_profile') }}">MON PROFIL</a>
                </li>
            {% endif %}
            {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
                <li>
                    <a href="{{ path('app_logout') }}">DECONNEXION</a>
                </li>
            {% else %}
                <li class="{{ app.request.attributes.get('_route') == 'app_login' or app.request.attributes.get('_route') == 'app_registration' ? 'linkActive' : '' }}">
                    <a href="{{ path('app_login') }}">CONNEXION</a>
                </li>
            {% endif %}
            {% if is_granted('ROLE_ADMIN') %}
                <li class="{{ app.request.attributes.get('_route') == 'app_admin' ? 'linkActive' : '' }} posAbsolute linkAdmin">
                    <a href="{{ path('app_admin') }}">ADMIN</a>
                </li>
            {% endif %}
            
        </ul>
    </nav>
</header>
