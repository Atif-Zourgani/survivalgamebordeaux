{% extends 'base.html.twig' %}

{% block title %}Hello RegistrationController!{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('styles/pages/login.css') }}">
{% endblock %}

{% block body %}
<h1>Inscription</h1>

<div class="loginContainer">
    {{ form_start(registrationForm) }}
    <div>
        {{ form_label(registrationForm.username) }}
        {{ form_widget(registrationForm.username) }}
        <div class="formError">
            {{ form_errors(registrationForm.username) }}
        </div>    
    </div>  
    <div>
        {{ form_label(registrationForm.email) }}
        {{ form_widget(registrationForm.email) }}
        <div class="formError">
            {{ form_errors(registrationForm.email) }}
        </div>
    </div>  
    <div>
        {{ form_label(registrationForm.password.first) }}
        {{ form_widget(registrationForm.password.first) }}
        <div class="formError">
            {{ form_errors(registrationForm.password.first) }}
        </div>
    </div>    
    <div>
        {{ form_label(registrationForm.password.second) }}
        {{ form_widget(registrationForm.password.second) }}
        <div class="formError">
            {{ form_errors(registrationForm.password.second) }}
        </div> 
    </div>
    <button type="submit" class="btn btn-success">S'inscrire</button>
    {{ form_end(registrationForm) }}
    <div class="borderSolid"></div>
    <div class="registrationContainer">
        <span>Vous avez déjà un compte?</span>
        <a href="{{ path('app_login') }}">
            <h2 class="button" >Connectez vous !</h2>
        </a>
    </div>
</div>

{% endblock %}
